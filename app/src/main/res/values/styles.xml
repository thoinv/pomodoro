<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActivityHeader">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#900e0e</item>
    </style>

    <style name="ButtonText">
        <item name="android:textSize">@dimen/text_size_borderless_button</item>
        <item name="android:textColor">@color/button_plain_text_color</item>
        <item name="android:background">@drawable/clickable_background_black_15</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_width">@dimen/bottom_bar_button</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BuyPremiumItemBox">
        <item name="android:gravity">clip_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="BuyPremiumItemIcon">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="BuyPremiumItemText">
        <item name="android:textSize">@dimen/buy_premium_item_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonAction">
        <item name="android:background">@null</item>
        <item name="android:layout_width">61dp</item>
        <item name="android:layout_height">61dp</item>
    </style>

    <style name="ButtonStandard">
        <item name="android:textSize">@dimen/text_size_standard_button</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_width">@dimen/bottom_bar_button</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStandard.Gray">
        <item name="android:background">@drawable/button_gray</item>
    </style>

    <style name="ButtonStandard.Green">
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="ButtonStandard.Red">
        <item name="android:background">@drawable/button_red</item>
    </style>
    <style name="StatsBar">
        <item name="android:background">@drawable/bg_white_bubble</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/stats_bar_height</item>
    </style>
    <style name="StatsLabel">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/stats_text_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="StatsLabel.Small">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/stats_text_light_gray</item>
    </style>
    <style name="StatsNumber">
        <item name="android:textSize">26dp</item>
        <item name="android:textColor">@color/stats_text_red</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="StatsNumber.Small">
        <item name="android:textSize">12dp</item>
    </style>
</resources>
