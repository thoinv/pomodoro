<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActivityHeader">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#ff900e0e</item>
    </style>
    <style name="ButtonText">
        <item name="android:textSize">@dimen/text_size_borderless_button</item>
        <item name="android:textColor">@color/button_plain_text_color</item>
        <item name="android:background">@drawable/clickable_background_black_15</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_width">@dimen/bottom_bar_button</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BuyPremiumItemBox">
        <item name="android:gravity">clip_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="BuyPremiumItemIcon">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="BuyPremiumItemText">
        <item name="android:textSize">@dimen/buy_premium_item_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TimerStyle">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/timer_font</item>
    </style>

    <style name="ButtonAction">
        <item name="android:background">@null</item>
        <item name="android:layout_width">61dp</item>
        <item name="android:layout_height">61dp</item>
    </style>

    <style name="ButtonStandard">
        <item name="android:textSize">@dimen/text_size_standard_button</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:layout_width">@dimen/bottom_bar_button</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStandard.Gray">
        <item name="android:background">@drawable/button_gray</item>
    </style>

    <style name="ButtonStandard.Green">
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="ButtonStandard.Red">
        <item name="android:background">@drawable/button_red</item>
    </style>

    <style name="SettingsLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="StatsBar">
        <item name="android:background">@drawable/bg_white_bubble</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/stats_bar_height</item>
    </style>
    <style name="StatsLabel">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/stats_text_gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="StatsLabel.Small">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/stats_text_light_gray</item>
    </style>
    <style name="StatsNumber">
        <item name="android:textSize">26dp</item>
        <item name="android:textColor">@color/stats_text_red</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="StatsNumber.Small">
        <item name="android:textSize">12dp</item>
    </style>
    <style name="VolumeBar">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:saveEnabled">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">100</item>
        <item name="android:progress">@null</item>
        <item name="android:secondaryProgress">@null</item>
        <item name="android:progressDrawable">@drawable/seek_bar_progress</item>
        <item name="android:thumb">@drawable/seek_thumb_normal</item>
    </style>
    <style name="WhiteCheckBox">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="Delimiter">
        <item name="android:background">@color/delimiter_background_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/delimiter_height</item>
    </style>
    <style name="WhiteEditText">
        <item name="android:theme">@style/WhiteEditTextTheme</item>
    </style>
    <style name="WhiteEditTextTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="WhiteSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>
    <style name="TextLinkFromSettings">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@drawable/clickable_background_black_15</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>
