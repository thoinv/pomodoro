<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:background="@drawable/list_activities_background_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/drag_handle"
            android:layout_width="36dp"
            android:layout_height="66dp"
            android:background="@drawable/ic_move_list_items" />

        <CheckBox
            android:id="@+id/isDone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:button="@drawable/checkbox_tasks"
            android:focusable="false" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/taskName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="This is task name"
                android:textColor="@color/dark_brown"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/doneExpectedTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/8"
            android:textColor="@color/dark_brown"
            android:textSize="18sp" />
    </LinearLayout>
</FrameLayout>
