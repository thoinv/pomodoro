<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/note_background"
    android:layout_width="278dp"
    android:layout_height="300dp"
    android:layout_above="@+id/bottom_buttons_box"
    android:layout_below="@+id/indicator_triangle"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/bg_note"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/task_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="50dp"
        android:text="@string/no_task_placeholder"
        android:textColor="@color/dark_brown"
        android:textSize="21sp" />

    <LinearLayout
        android:id="@+id/box_completed_pomodoros_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp" />
</RelativeLayout>
