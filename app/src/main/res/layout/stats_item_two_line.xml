<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/StatsBar">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label_top"
            style="@style/StatsLabel"
            android:text="Yesterday" />

        <TextView
            android:id="@+id/label_bottom"
            style="@style/StatsLabel.Small"
            android:text="(vs. same day last month)" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/number_top"
            style="@style/StatsNumber"
            android:text="8"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/number_bottom"
            style="@style/StatsNumber.Small"
            android:text="(8)" />
    </LinearLayout>
</RelativeLayout>
